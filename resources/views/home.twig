<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>{% block title %}{% endblock %}</title>
    <link rel="stylesheet" href="/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" href="/bootstrap/css/bootstrap-theme.min.css">
    <link rel="stylesheet" href="/css/main.css">
</head>
<body>
<div class="wrapper">
    <header>

        <nav class="navbar">
            <div class="container container-fluid">
                <div class="navbar-header">
                    <h1><a href="{{ route('index') }}">FAQ</a></h1>
                </div>

                <ul class="nav navbar-nav navbar-right">
                    {% if currentUser %}
                        <li>
                            <a href="{{ route('home') }}"><i class="glyphicon glyphicon-user" aria-hidden="true"
                                                             title="Войти"></i> {{ currentUser.name }}</a>
                        </li>
                        <li>
                            <form action="{{ route('logout') }}" method="post" accept-charset="utf-8" title="Выйти">
                                {{ csrf_field() }}
                                <a href="javascript:;" onclick="parentNode.submit()">Выйти</a>
                            </form>
                        </li>
                    {% else %}
                        <li><a href="{{ route('home') }}">Войти</a></li>
                    {% endif %}
                </ul>
            </div>
        </nav>
    </header>

    </nav>
    <div class="content">
        {% block content %}
        {% endblock %}
    </div>


    <footer>
        <div class="container">
            <p> &copy; 2018 Evgeny Mikhachev</p>
        </div>
    </footer>
</div>
</body>
</html>
{% block javascripts %}
    <script src="/js/jquery-3.2.1.min.js" type="text/javascript" charset="utf-8" async defer></script>
    <script src="/bootstrap/js/bootstrap.min.js" type="text/javascript" charset="utf-8" async defer></script>
{% endblock %}