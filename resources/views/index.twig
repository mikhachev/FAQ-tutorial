{% extends 'main.twig' %}

{% block title %}FAQ{% endblock %}

{% block content %}
    <div class="container">

        <div class="row">
            <div class="col-md-3 aside">
                <h3>Темы</h3>
                <hr>
                <ul class="nav nav-pills nav-stacked">
                    {% for th in themes %}
                        <li {{ th.id == theme.id ? 'class="active"' }}><a
                                    href="{{ route('index.theme', {'id' : th.id}) }}">{{ th.name }}</a></li>
                    {% endfor %}
                </ul>
                <hr>
                <div class="btn-panel">
                    <a class="btn btn-success" href="{{ route('question.create') }}">Задать вопрос</a>
                </div>

            </div>
            <div class="col-md-9">

                {#
                            <hr> #}
                {% for q in theme.questionsPublished %}
                    <div class="panel panel-success class">
                        <div class="panel-heading">
                            <h3 class="panel-title">{{ q.name }}</h3>
                        </div>
                        <div class="panel-body">
                            {{ q.answer }}
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>

    </div>
{% endblock %}   